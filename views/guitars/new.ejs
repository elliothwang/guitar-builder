<%- include('../partials/header') %>

<form id="new-guitar-form" action="/guitars" method="POST">

  <input type="submit" value="Create Guitar">
</form>

<form id="new-neck-form" action="/guitars<%= guitar._id %>/body" method="POST">
  <label>Neck Wood</label>
    <select name="neckWood">
      <option value="Maple">Maple</option>
      <option value="Ebony">Ebony</option>
      <option value="Rosewood" selected="selected">Rosewood</option>
      <option value="Walnut">Walnut</option>
    </select>
  <label>Position Markers</label>
    <select name="positionMarkers">
      <option value="True" selected="selected">True</option>
      <option value="False">False</option>
    </select>
    
    <input type="submit" value="Save Neck">
</form>

<form id="new-body-form" action="/guitars<%= guitar._id %>/body" method="POST">
  <label>Body Type</label>
    <select name="bodyType">
      <option value='Dreadnought' selected="selected">Dreadnought</option>
      <option value='Auditorium'>Auditorium</option>
      <option value='Parlour'>Parlour</option>
      <option value='Classical'>Classical</option>
    </select>
  <label>Top Wood</label>
    <select name="topWood">
      <option value='Spruce'>Spruce</option>
      <option value='Cedar' selected="selected">Cedar</option>
      <option value='Mahogany'>Mahogany</option>
      <option value='Maple'>Maple</option>
    </select>
  <label>Side Wood</label>
    <select name="sideWood">
      <option value='Spruce'>Spruce</option>
      <option value='Mahogany' selected="selected">Mahogany</option>
      <option value='Maple'>Maple</option>
      <option value='Koa'>Koa</option>
      <option value='Rosewood'>Rosewood</option>
      <option value='Walnut'>Walnut</option>
    </select>
  <label>Back Wood</label>
    <select name="backWood">
      <option value='Spruce'>Spruce</option>
      <option value='Cedar'>Cedar</option>
      <option value='Mahogany' selected="selected">Mahogany</option>
      <option value='Maple'>Maple</option>
    </select>
  <input type="submit" value="Save Body">
</form>


  
<%- include('../partials/footer') %>