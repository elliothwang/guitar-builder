<%- include('../partials/header') %>

  <table id="user-guitars">
    <thead>
      <th>Name</th>
      <th>Top Wood</th>
      <th>Side & Back Wood</th>
      <th>Neck Wood</th>
    </thead>
    <tbody>
      <% userGuitars.forEach(function (userGuitar) { %>
        <tr>
          <!-- <td><%= userGuitar.image %></td> -->
          <td><%= userGuitar.name %></td>
          <td><%= userGuitar.body.topWood %></td>
          <td><%= userGuitar.body.sideAndBackWood %></td>
          <td><%= userGuitar.neck.neckWood %></td>
          <% if (user && user._id.equals(userGuitar.user)) { %>
            <td>
              <form action="/guitars/<%= userGuitar.id %>?_method=DELETE" method="POST">
                <button type="submit">X</button>
              </form>
            </td>
          <% } %>
        </tr>
      <% }); %>
    </tbody>
  </table>

<%- include('../partials/footer') %> 